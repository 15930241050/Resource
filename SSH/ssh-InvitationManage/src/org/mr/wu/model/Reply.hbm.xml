<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
PUBLIC "-//Hibernate/hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.mr.wu.model.Reply" table="reply_detail">
		<id name="id" type="int" column="id">
			<generator class="identity" />
		</id>
		<property name="content" column="content" type="java.lang.String" length="255" not-null="true"/>
		<property name="author" column="author" type="java.lang.String" length="50" />
		<property name="createDate" column="createdate" type="java.sql.Date" not-null="true" />
		<many-to-one name="invitation" column="invid" class="org.mr.wu.model.Invitation" cascade="all"/>
	</class>
</hibernate-mapping>