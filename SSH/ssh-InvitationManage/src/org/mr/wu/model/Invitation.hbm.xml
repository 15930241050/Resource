<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
PUBLIC "-//Hibernate/hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.mr.wu.model.Invitation" table="invitation">
		<id name="id" type="int" column="id">
			<generator class="identity" />
		</id>
		<property name="title" column="title" type="java.lang.String" length="100" not-null="true"/>
		<property name="summary" column="summary" type="java.lang.String" length="255"/>
		<property name="author" column="author" type="java.lang.String" length="50"/>
		<property name="createDate" column="createdate" type="java.sql.Date" not-null="true" />
		<set name="replies" lazy="true" cascade="all">
			<key column="invid"></key>
			<one-to-many class="org.mr.wu.model.Reply"/>
		</set>
	</class>
</hibernate-mapping>